@model PerfumeShop.DTO.DangNhapVM
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <title>Đăng nhập</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background: linear-gradient(135deg, #c3ecf5, #e2f0cb);
            height: 100vh;
            display: flex;
            justify-content: center;
            align-items: center;
        }
        .card {
            box-shadow: 0 0 20px rgba(0,0,0,0.1);
            border-radius: 20px;
        }
        .form-control:focus {
            box-shadow: none;
            border-color: #4d90fe;
        }
    </style>
</head>
<body>
    <div class="card p-4" style="width: 400px;">
        <h3 class="text-center mb-4">Đăng nhập</h3>
        <form asp-action="DangNhap" method="post">
            <div class="mb-3">
                <label class="form-label">Tài khoản</label>
                <input asp-for="UserName" class="form-control" placeholder="Nhập tài khoản" />
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label class="form-label">Mật khẩu</label>
                <div class="input-group">
                    <input asp-for="PassWord" class="form-control" placeholder="Nhập mật khẩu" type="password" id="password">
                    <button class="btn btn-outline-secondary" type="button" onclick="togglePassword()">👁️</button>
                </div>
                <span asp-validation-for="PassWord" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary w-100">Đăng nhập</button>
        </form>
        <div class="text-center mt-3">
            <a href="/TaiKhoan/DangKy">Chưa có tài khoản? Đăng ký</a>
        </div>
        @if (ViewBag.Error != null)
        {
            <div class="alert alert-danger mt-3 text-center">@ViewBag.Error</div>
        }
    </div>

    <script>
        function togglePassword() {
            const pw = document.getElementById("password");
            pw.type = pw.type === "password" ? "text" : "password";
        }
    </script>
</body>
</html>
