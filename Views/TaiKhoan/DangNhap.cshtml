@model PerfumeShop.DTO.DangNhapVM
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <title>Đăng nhập</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        body {
            background: linear-gradient(to right, #c2e9fb, #a1c4fd);
            height: 100vh;
            display: flex;
            justify-content: center;
            align-items: center;
        }

        .card {
            padding: 30px;
            border-radius: 20px;
            box-shadow: 0 5px 25px rgba(0, 0, 0, 0.15);
            width: 100%;
            max-width: 400px;
        }

        .form-control {
            border-radius: 12px;
        }

        .btn-primary {
            border-radius: 12px;
            background: linear-gradient(to right, #667eea, #764ba2);
            border: none;
        }

            .btn-primary:hover {
                opacity: 0.9;
            }

        a {
            text-decoration: none;
            color: #333;
        }

            a:hover {
                color: #000;
            }
    </style>
</head>
<body>
    <div class="card">
        <h3 class="text-center mb-4 fw-bold text-uppercase">Đăng nhập</h3>
        <form asp-action="DangNhap" method="post">
            <div class="form-floating mb-3">
                <input asp-for="UserName" class="form-control" placeholder="Tài khoản" />
                <label for="UserName">Tên đăng nhập</label>
                <span asp-validation-for="UserName" class="text-danger small"></span>
            </div>

            <div class="form-floating mb-4">
                <input asp-for="PassWord" class="form-control" placeholder="Mật khẩu" type="password" id="password" />
                <label for="PassWord">Mật khẩu</label>
                <span asp-validation-for="PassWord" class="text-danger small"></span>
            </div>

            <button type="submit" class="btn btn-primary w-100">Đăng nhập</button>
        </form>
        <div class="text-center mt-3">
            <a href="/TaiKhoan/DangKy">Chưa có tài khoản? Đăng ký ngay</a>
        </div>
        @if (ViewBag.Error != null)
        {
            <div class="alert alert-danger mt-3 text-center">@ViewBag.Error</div>
        }
    </div>
    <script>
        function togglePassword() {
            const pw = document.getElementById("password");
            pw.type = pw.type === "password" ? "text" : "password";
        }
    </script>
</body>
</html>
