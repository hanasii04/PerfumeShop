@model PerfumeShop.DTO.DangKyVM
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <title>Đăng ký</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background: linear-gradient(135deg, #f6d365, #fda085);
            height: 100vh;
            display: flex;
            justify-content: center;
            align-items: center;
        }

        .card {
            border-radius: 20px;
            box-shadow: 0 0 20px rgba(0,0,0,0.1);
        }

        .form-control:focus {
            box-shadow: none;
            border-color: #ff7e5f;
        }
    </style>
</head>
<body>
    <div class="card p-4" style="width: 500px;">
        <h3 class="text-center mb-4">Đăng ký tài khoản</h3>
        <form asp-action="DangKy" method="post">
            <div class="mb-2">
                <input asp-for="UserName" class="form-control" placeholder="Tên tài khoản" />
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>
            <div class="mb-2">
                <div class="input-group">
                    <input asp-for="PassWord" class="form-control" type="password" placeholder="Mật khẩu" id="regPassword">
                    <button type="button" class="btn btn-outline-secondary" onclick="toggleRegPassword()">👁️</button>
                </div>
                <span asp-validation-for="PassWord" class="text-danger"></span>
            </div>
            <div class="mb-2">
                <input asp-for="HoTen" class="form-control" placeholder="Họ và tên" />
                <span asp-validation-for="HoTen" class="text-danger"></span>
            </div>
            <div class="mb-2">
                <input asp-for="Email" class="form-control" placeholder="Email" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <input asp-for="SoDienThoai" class="form-control" placeholder="Số điện thoại" />
                <span asp-validation-for="SoDienThoai" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-success w-100">Đăng ký</button>
        </form>
        <div class="text-center mt-3">
            <a href="/TaiKhoan/DangNhap">Đã có tài khoản? Đăng nhập</a>
        </div>
        @if (ViewBag.Error != null)
        {
            <div class="alert alert-danger mt-3 text-center">@ViewBag.Error</div>
        }
    </div>

    <script>
        function toggleRegPassword() {
            const pw = document.getElementById("regPassword");
            pw.type = pw.type === "password" ? "text" : "password";
        }
    </script>
</body>
</html>
