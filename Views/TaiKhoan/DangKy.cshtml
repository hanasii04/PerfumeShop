@model PerfumeShop.DTO.DangKyVM
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <title>Đăng ký tài khoản</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        body {
            background: linear-gradient(to right, #ffecd2, #fcb69f);
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
        }

        .card {
            border-radius: 20px;
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.2);
            padding: 30px;
            width: 100%;
            max-width: 500px;
        }

        .form-control {
            border-radius: 12px;
        }

        .btn-success {
            border-radius: 12px;
            background: linear-gradient(45deg, #42e695, #3bb2b8);
            border: none;
        }

            .btn-success:hover {
                opacity: 0.9;
            }

        a {
            color: #444;
            text-decoration: none;
        }

            a:hover {
                color: #000;
            }
    </style>
</head>
<body>
    <div class="card">
        <h3 class="text-center mb-4 fw-bold text-uppercase">Tạo tài khoản mới</h3>
        <form asp-action="DangKy" method="post">
            <div class="form-floating mb-3">
                <input asp-for="UserName" class="form-control" placeholder="Tên tài khoản" />
                <label for="UserName">Tên tài khoản</label>
                <span asp-validation-for="UserName" class="text-danger small"></span>
            </div>

            <div class="form-floating mb-3">
                <input asp-for="PassWord" class="form-control" placeholder="Mật khẩu" type="password" id="regPassword" />
                <label for="PassWord">Mật khẩu</label>
                <span asp-validation-for="PassWord" class="text-danger small"></span>
            </div>

            <div class="form-floating mb-3">
                <input asp-for="HoTen" class="form-control" placeholder="Họ và tên" />
                <label for="HoTen">Họ và tên</label>
                <span asp-validation-for="HoTen" class="text-danger small"></span>
            </div>

            <div class="form-floating mb-3">
                <input asp-for="Email" class="form-control" placeholder="Email" />
                <label for="Email">Email</label>
                <span asp-validation-for="Email" class="text-danger small"></span>
            </div>

            <div class="form-floating mb-4">
                <input asp-for="SoDienThoai" class="form-control" placeholder="Số điện thoại" />
                <label for="SoDienThoai">Số điện thoại</label>
                <span asp-validation-for="SoDienThoai" class="text-danger small"></span>
            </div>

            <button type="submit" class="btn btn-success w-100">Đăng ký</button>
        </form>
        <div class="text-center mt-3">
            <a href="/TaiKhoan/DangNhap">Đã có tài khoản? Đăng nhập</a>
        </div>
        @if (ViewBag.Error != null)
        {
            <div class="alert alert-danger mt-3 text-center">@ViewBag.Error</div>
        }
    </div>
    <script>
        function toggleRegPassword() {
            const pw = document.getElementById("regPassword");
            pw.type = pw.type === "password" ? "text" : "password";
        }
    </script>
</body>
</html>
