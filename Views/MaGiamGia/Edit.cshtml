@model PerfumeShop.DTO.MaGiamGiaDTO

@{
    ViewData["Title"] = "Chỉnh sửa mã giảm giá";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Chỉnh sửa mã giảm giá</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label asp-for="TenMaGiamGia" class="control-label"></label>
        <input asp-for="TenMaGiamGia" class="form-control" />
        <span asp-validation-for="TenMaGiamGia" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="PhanTramGiam" class="control-label"></label>
        <input asp-for="PhanTramGiam" class="form-control" />
        <span asp-validation-for="PhanTramGiam" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="NgayBatDau" class="control-label"></label>
        <input asp-for="NgayBatDau" class="form-control" type="date" />
        <span asp-validation-for="NgayBatDau" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="NgayKetThuc" class="control-label"></label>
        <input asp-for="NgayKetThuc" class="form-control" type="date" />
        <span asp-validation-for="NgayKetThuc" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="SoLuong" class="control-label"></label>
        <input asp-for="SoLuong" class="form-control" />
        <span asp-validation-for="SoLuong" class="text-danger"></span>
    </div>

    <div class="form-group form-check">
        <input asp-for="TrangThai" class="form-check-input" />
        <label asp-for="TrangThai" class="form-check-label"></label>
    </div>

    <button type="submit" class="btn btn-primary">Lưu thay đổi</button>
    <a asp-action="Index" class="btn btn-secondary">Quay lại</a>
</form>

